---
export interface Props {
  category: string;
  title: string;
  desc: string;
  href: string;
}

const { category, title, desc, href } = Astro.props;
---
<article class="card tool" data-category={category}>
  <span class="badge">{category}</span>
  <h3>{title}</h3>
  <p>{desc}</p>
  <a class="tool-link" href={href} aria-label={`Abrir ${title}`}>
